{
  "name": "revmanger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
    "server:prod": "cd server && npm run start",
    "install-all": "npm install && cd server && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPatterns=src/__tests__",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "test:components": "jest --testPathPatterns=src/__tests__/components",
    "test:contexts": "jest --testPathPatterns=src/__tests__/contexts",
    "test:hooks": "jest --testPathPatterns=src/__tests__/hooks",
    "test:utils": "jest --testPathPatterns=src/__tests__/utils",
    "test:docker": "./test-docker.sh",
    "test:docker:frontend": "./test-docker.sh --frontend",
    "test:docker:backend": "./test-docker.sh --backend",
    "test:e2e": "playwright test",
    "test:performance": "jest --testPathPatterns=performance",
    "test:accessibility": "jest --testPathPatterns=accessibility",
    "docker:build": "docker build -t revmanager-frontend .",
    "docker:build:server": "cd server && docker build -t revmanager-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:logs": "docker-compose logs -f",
    "deploy:build": "npm run build:prod && cd server && npm run build:prod"
  },
  "dependencies": {
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "recharts": "^3.1.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.7"
  }
}
